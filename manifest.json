{
  "manifest_version": 3,
  "name": "html-edit",
  "version": "1.7.0",
  "description": "Some bizarre web features",
  "icons": {
    "512": "./icon/edit.png"
  },
  "action": {
    "default_icon": "./icon/edit.png",
    "default_title": "html-edit",
    "default_popup": "./popup/index.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["./content/style.js", "./content/popup.js", "./content/init.js"],
      "css": ["./content/index.css"],
      "run_at": "document_end"
    }
  ],
  "permissions": ["storage"]
}
